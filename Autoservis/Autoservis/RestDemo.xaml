<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autoservis.RestDemo">
    <ContentPage.Content>

        <StackLayout>
            <Button Text="Get" Clicked="Button_Clicked"></Button>
            <Button Text="Get single" Clicked="Button_Clicked_1"></Button>
            <Button Text="Create" Clicked="Button_Clicked_2"></Button>
            <Label x:Name="label" Text="{Binding id}" BackgroundColor="Black" FontSize="Large"></Label>
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding title}"></Label>
                                <Label Text="{Binding id}"></Label>
                                <Label Text="{Binding author}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>