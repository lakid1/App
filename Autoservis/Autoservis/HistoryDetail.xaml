<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autoservis.HistoryDetail">
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="detailListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Cena}"></Label>
                                <Label Text="{Binding Datum, StringFormat='{}{0:dd/MM/yyyy}'}"></Label>
                                <Label Text="{Binding Zasah}"></Label>
                                <Label Text="{Binding Popis}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>