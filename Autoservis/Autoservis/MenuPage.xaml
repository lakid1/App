<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Autoservis"
             x:Class="Autoservis.MenuPage" 
             MasterBehavior="Popover">

    <MasterDetailPage.Master>
        
        <ContentPage Title="Master" Icon="hamburger.png">
            <StackLayout>
            <ListView x:Name="listView" HasUnevenRows="True" ItemSelected="ListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding Icon}"></Image>
                                <Label Text="{Binding Name}" VerticalOptions="Center"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
                <StackLayout>
                    <Button Text="Odhlásit se" Clicked="Button_Clicked"></Button>
                </StackLayout>
            </StackLayout>
            
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage></ContentPage>
    </MasterDetailPage.Detail>


</MasterDetailPage>
