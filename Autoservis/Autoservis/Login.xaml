<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autoservis.Login"
             Padding="50"
             Title="Login">
    <ContentPage.Content>
        <AbsoluteLayout>
            <ActivityIndicator Color="Blue" 
                               x:Name="activityIndicator"
                               AbsoluteLayout.LayoutBounds="0.5,0.5,70,70" 
                               AbsoluteLayout.LayoutFlags="PositionProportional">
            </ActivityIndicator>
            <StackLayout>
                <Label FontSize="Large" Text="Vítejte v aplikaci Můj Autoservis"></Label>
                <Label FontSize="Medium"  Text="Prosím přihlaste se"></Label>
            </StackLayout>
            <Grid AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 200" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional">
                <Entry x:Name="email" Grid.Column="0" Grid.Row="0" Keyboard="Email" Placeholder="E-mail"></Entry>
                <Entry x:Name="password" Grid.Column="0" Grid.Row="1" IsPassword="True" Placeholder="Password"></Entry>
                <Button Grid.Column="0" Grid.Row="2" Text="Login" Clicked="Button_ClickedAsync"></Button>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>